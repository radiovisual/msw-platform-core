{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["jest"],
    "lib": ["es2017", "dom"],
    "jsx": "react-jsx",
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist"]
} 