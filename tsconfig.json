{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": "src",
		"types": ["jest", "@testing-library/jest-dom"],
		"lib": ["es2017", "dom"],
		"jsx": "react-jsx",
		"declaration": true
	},
	"include": ["src", "jest.setup.js"],
	"exclude": ["node_modules", "dist"]
}
